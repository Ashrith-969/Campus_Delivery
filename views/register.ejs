<%- include("partials/header") -%>

<div id="login-container">
    <img src="https://upload.wikimedia.org/wikipedia/commons/7/73/Logo_IIT_Bhilai.png" alt="IIT Bhilai Logo" id="iit-logo" width="200" height="200">
    <h1>Indian Institute of Technology Bhilai Campus Pharmacy</h1>
    <h2>User Registration</h2>


    <form action="/register" method="post">
        <p class="error"><%= message %></p>
        <label for="email">IIT Bhilai Email:</label>
        <input type="email" id="email" name="email" required placeholder="username@iitbhilai.ac.in">

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>

        <label for="confirm_password">Confirm Password:</label>
        <input type="password" id="confirm_password" name="confirm_password" required>
                
        <label for="userType">Choose user type:</label>
          <select name="userType" id="userType">
              <option value="Student">Student</option>
              <option value="Faculty">Faculty</option>
              <option value="Staff">Staff</option>
              <option value="Guest">Guest</option>
              <option value="Pharmacy">Pharmacy</option>
              <option value="Admin">Admin</option>
            </optgroup>
          </select>
          <br><br>
                
        <button type="submit">Register</button>
    </form>
</div>

<%- include("partials/footer") -%>