<%- include('partials/header'); -%>


<div id="login-container">
    <img src="https://upload.wikimedia.org/wikipedia/commons/7/73/Logo_IIT_Bhilai.png" alt="IIT Bhilai Logo" id="iit-logo" width="200" height="200">
    <h1>Indian Institute of Technology Bhilai Campus Pharmacy</h1>
    <h2>User Login</h2>


    <form action="/" method="post">
        <p class="error"><%= message %></p>
        <label for="email">IIT Bhilai Email:</label>
        <input type="email" id="email" name="email" required placeholder="username@iitbhilai.ac.in">

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>

        <button type="submit">Login</button>
    </form>

    <a href="/forget" class="forgot-password">Forgot Password?</a>
    <p>New user? <a href="/register">Register here</a></p>

</div>


<%- include("partials/footer"); -%>
